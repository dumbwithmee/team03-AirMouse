void setup() {
  Serial.begin(9600);
  
  // ⬅️ 신호 핀을 입력으로 설정
  pinMode(modePin, INPUT);
  
  delay(100); 

  // --- OLED 초기화 ---
  if (!display.begin(SSD1306_SWITCHCAPVCC, 0x3C)) {
    Serial.println(F("SSD1306 allocation failed"));
    for(;;);
  }
  
  Serial.println(F("OLED Init Success"));
  display.clearDisplay();
  display.drawBitmap(0, 0, image_mouse, SCREEN_WIDTH, SCREEN_HEIGHT, SSD1306_WHITE);
  display.display();
  lastMode = LOW; // 초기 모드는 마우스 (LOW)
}


void loop() {
  // 7번 핀에서 신호를 읽음 (LOW=마우스, HIGH=제스처)
  int currentMode = digitalRead(modePin);
  
  // 모드가 변경되었을 때만 화면을 새로 그림
  if (currentMode != lastMode) {
    display.clearDisplay();
    
    if (currentMode == HIGH) {
      // 제스처 모드
      display.drawBitmap(0, 0, image_gesture, SCREEN_WIDTH, SCREEN_HEIGHT, SSD1306_WHITE);
    } else {
      // 마우스 모드
      display.drawBitmap(0, 0, image_mouse, SCREEN_WIDTH, SCREEN_HEIGHT, SSD1306_WHITE);
    }
    
    display.display();
    lastMode = currentMode; // 현재 모드를 저장
  }
  
  delay(50); // 0.05초마다 한 번씩만 체크
}